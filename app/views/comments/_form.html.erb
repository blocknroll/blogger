<h3>Post a Comment</h3>

<%= form_for [ @article, @comment] do |f| %>
  <p>
    <%= f.label :author_name, "Your (very distinguished) Name" %><br>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Your (super important) Comment" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Submit this" %>
  </p>
<% end %>
